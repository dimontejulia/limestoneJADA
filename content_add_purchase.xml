<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_purchase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.alicesantilli.myapplication.addPurchase"
    tools:showIn="@layout/activity_add_purchase">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:id="@+id/amountText" />

    <TextView
        android:text="How much did it cost?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseText"
        android:layout_marginBottom="54dp"
        android:layout_alignBottom="@+id/amountText"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:text="Add Purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/addPurchase"
        android:onClick="submitMessage" />
</RelativeLayout>
